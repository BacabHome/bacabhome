# https://www.home-assistant.io/integrations/amcrest/

amcrest:
  - host: !secret amcrest_01_host
    username: !secret amcrest_01_username
    password: !secret amcrest_01_password
    name: Amcrest Camera 01
    resolution: low
    stream_source: mjpeg
    binary_sensors:
      - motion_detected
      - online
    sensors:
      - sdcard
    ffmpeg_arguments: -vaapi_device /dev/dri/renderD128 -vcodec h264_vaapi -vf format='nv12|vaapi,hwupload'
