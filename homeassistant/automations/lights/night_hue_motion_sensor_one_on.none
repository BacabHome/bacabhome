alias: Night Hue Motion Sensor One On
initial_state: 'false'
trigger:
  platform: state
  entity_id: binary_sensor.hue_motion_sensor_one_motion
  to: 'on'
condition:
  condition: and
  conditions:
    - condition: state
      entity_id: light.luz_cochera
      state: 'off'
    - condition: or
      conditions:
        - condition: sun
          after: sunset
        - condition: sun
          before: sunrise
action:
  service: light.turn_on
  entity_id: light.luz_cochera
